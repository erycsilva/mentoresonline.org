//- Featured Object: /views/_data/featured.pug

mixin cover(video, meta)
  section.featured.cover(id=(meta ? meta : page.video.meta) + "-cover", style="background-image: url(" + video.bg + ");")
    .row
      article.cover-video
        figure.cover-video--category
          img(src=video.category.img.white, alt="Logotipo da série "+ video.category.name+ " do "+ siteName)
        h2.cover-video--title #{video.title}
        p.cover-video--description #{video.description}   
        

      a(href="#open-video", title="Assista o vídeo de "+video.title+" no "+video.category.name+" do "+siteName, rel='noopener noreferrer').play-button 
        img(src="/img/icons/icon-play--white.svg", alt="Ícone de Play")

    .row
      include partners.pug

    if isVideoPage
      .row
        a(href="#transcricao", title="Leia a transcrição").scroll-down.--white Leia a transcrição